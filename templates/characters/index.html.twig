{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-4 py-8" data-controller="character">
        <!-- Page Title -->
        <h1 class="text-2xl font-bold mb-4">Select a Dimension</h1>

        <!-- Dimension Dropdown -->
        <div class="mb-6">
            <label for="dimension-select" class="block mb-1 text-sm font-medium text-gray-700">
                Choose a dimension:
            </label>
            <select
                id="dimension-select"
                data-character-target="dropdown"
                data-action="change->character#update"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
            >
                {% for dimension in dimensions %}
                    <option value="{{ dimension.id }}">{{ dimension.name }}</option>
                {% endfor %}
            </select>
        </div>

        <!-- Loading Indicator -->
        <div
            data-character-target="loading"
            class="mb-6 p-4 border border-yellow-200 bg-yellow-50 text-yellow-800 rounded-md"
            style="display: none;"
        >
            <p>Loading...</p>
        </div>

        <!-- No Results Found -->
        {% if dimensions is empty %}
            <div class="p-4 border border-red-200 bg-red-50 text-red-800 rounded-md">
                <p>No results found.</p>
            </div>
        {% else %}
            <!-- Display Container (AJAX Response) -->
            <div
                data-character-target="display"
                class="mt-4 p-4 border border-gray-200 rounded-md"
            >
                <p class="text-gray-700">Dimension details will appear here.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
